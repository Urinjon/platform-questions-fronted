{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			// "@modules/*": ["modules/*"],
			"@ui-kit/*": ["shared/ui-kit/*"],
			// "@shared/*": ["shared/*"],
			// "@app/*": ["app/*"],
			// "@/*": ["./*"],

			"@app/*": ["app/*"],
			"@widgets/*": ["widgets/*"],
			"@features/*": ["features/*"],
			"@entities/*": ["entities/*"],
			"@shared/*": ["shared/*"],
			"@assets/*": ["assets/*"],

			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		"**/*.mts"
	],
	"exclude": ["node_modules"]
}
